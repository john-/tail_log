#!/usr/bin/env perl

use Mojolicious::Lite;
use Mojolicious::Plugins;

get '/' => { template => 'admin' };

get '/netstat' => sub {
    my $c = shift;

    my @result = `netstat`;
    my @ports = grep(/50\.56\.75\.58/, @result);

    my $text = join("\n", @ports);
    $c->render(text=> $text);
    #foreach my $match (@ports) {
    #    $c->render(text=> $match);
    #}

};

get '/tail' => sub {
    my $c   = shift;
    my $module = $c->param('service');

    my $log_file = sprintf('/cart/%s/log/%s.log', $module, $module); 
    app->plugin('Webtail', {file => $log_file, tail_opts => '-f -n 10'});
 
    $c->redirect_to('/webtail')
};

get '/restart' => sub {
    my $c   = shift;
    my $module = $c->param('service');

    my @args = ('sudo', '/bin/systemctl', 'restart', $module);
    
    my $result = system(@args);
    $c->render(text=> "Returned: $result (zero is good, otherwise maybe service not running)");
    
};

get '/poweroff' => sub {
    my $c   = shift;
    #my $module = $c->param('service');

    my @args = ('sudo', '/sbin/poweroff');
    
    my $result = system(@args);
    $c->render(text=> "Returned: $result (zero is good)");
    
};

get '/hello' => sub { 
    my $c = shift;

    $c->redirect_to('/webtail')

};

app->start;

__DATA__

@@ admin.html.ep
% layout 'html5';
